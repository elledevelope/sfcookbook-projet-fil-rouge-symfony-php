				{# usermane #}
				<h2>username:
					<span>{{ user.username }}</span>
				</h2>

				{# email #}
				<p>email:
					{{ user.email }}</p>

				{# about  #}				
				<h2>About me:</h2>
				<p class="user-about">{{ user.about ? user.about : 'Tell us about yourself...' }}</p>
				
				{# created_at #}
				<p>You are a member of Cookbook community since: <br>
					<span>{{ user.createdAt ? user.createdAt|date('j F Y') : '' }}</span>
				</p>
			</div>

			<a href="{{ path('app_user_edit', {'id': user.id}) }}">Edit profile</a>

			{{ include('user/_delete_form.html.twig') }}

