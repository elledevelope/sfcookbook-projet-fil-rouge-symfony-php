{% extends 'base.html.twig' %}

{% block title %}Favorites index{% endblock %}

{% block body %}
    <h1>Favorites index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Favorite_id</th>
                <th>User_id</th>
                <th>Recipe_id</th>
                <th>Created_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for favorite in favorites %}
            <tr>
                <td>{{ favorite.id }}</td>
                <td>{{ favorite.favoriteId }}</td>
                <td>{{ favorite.userId }}</td>
                <td>{{ favorite.recipeId }}</td>
                <td>{{ favorite.createdAt ? favorite.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_favorites_show', {'id': favorite.id}) }}">show</a>
                    <a href="{{ path('app_favorites_edit', {'id': favorite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_favorites_new') }}">Create new</a>
{% endblock %}
