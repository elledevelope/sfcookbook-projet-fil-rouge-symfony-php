{% extends 'base.html.twig' %}

{% block title %}Favorites{% endblock %}

{% block body %}
    <h1>Favorites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ favorite.id }}</td>
            </tr>
            <tr>
                <th>Favorite_id</th>
                <td>{{ favorite.favoriteId }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ favorite.userId }}</td>
            </tr>
            <tr>
                <th>Recipe_id</th>
                <td>{{ favorite.recipeId }}</td>
            </tr>
            <tr>
