{% extends 'base.html.twig' %}

{% block title %}Coobook
{% endblock %}

{% block body %}
	<section class="recipes">
		{# <div class="recipes"> #}
			<h2 class="pagename">Discover Culinary Delights</h2>
			<p class="p-intro">Elevate your home cooking with our curated collection of mouthwatering recipes.
From Mediterranean-inspired Pan-Roasted Chicken to classic American Baked Potato Soup, explore diverse flavors and create unforgettable meals in your own kitchen. Let the adventure begin!</p>

			<div class="gallery-recipes">
				{% for recipe in recipes %}

					<div class="recipes-card">
						{# <a class="recipe-link" href="{{ path('app_recipes_show', {'id': recipe.id}) }}"> #}

							{% if recipe.image %}
								<div class="recipes-card-img">
									<img class="crop-horizontal card-img" src="/uploads/{{ recipe.image }}" alt="{{ recipe.title }}">
								{# <img src="{{ asset('uploads/' ~ recipe.id ~ '.jpg') }}" alt="{{ recipe.title }}"> #}
								</div>
							{% endif %}

						<div class="recipe-card-content">
								{# <div class="recipes-content-up"> #}
								<div class="level-budget">
										<p>
											<i class='bx bx-globe'></i>:
											{{ recipe.cuisine }}</p>
										<p>
											<i class='bx bxs-bowl-rice'></i>:
											{{ recipe.level }}</p>
										<p>
											<i class='bx bx-euro'></i>:
											{{ recipe.budget }}</p>
									</div>
									<h5>{{ recipe.title }}</h5>
									{# <div class="recipes-icons">
										<i class='bx bxs-heart'></i>
										<i class='bx bxs-share-alt'></i>
									</div> #}
								{# </div>		 #}

								{# <div id="recipe-details"> #}
									<p class="recipes-card-description">{{ recipe.description }}</p>					
								{# </div> #}

									<div  class="div-btn">
										<a class="btn-getCooking" href="{{ path('app_recipes_show', {'id': recipe.id}) }}">Get Cooking!</a>
									</div>
								
							</div>

						{# </a> #}
					</div>

				{% else %}
					<p>No records found</p>
				{% endfor %}
			</div>

		{# </div> #}
	</section>

	<a href="{{ path('app_recipes_new') }}">Create new</a>
{% endblock %}
