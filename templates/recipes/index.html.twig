{% extends 'base.html.twig' %}

{% block title %}Coobook
{% endblock %}

{% block body %}
	<section class="recipes-background">
		<div class="recipes">
			<p class="pagename">Discover Culinary Delights</p>
			<p class="p-intro">
				Elevate your home cooking with our curated collection of mouthwatering recipes.
				From Mediterranean-inspired Pan-Roasted Chicken to classic American Baked Potato Soup,
				explore diverse flavors and create unforgettable meals in your own kitchen.
				Let the adventure begin!
			</p>

			<div class="gallery-recipes">
				{% for recipe in recipes %}
					<div class="recipes-card">
						<a class="recipe-link" href="{{ path('app_recipes_show', {'id': recipe.id}) }}">
							<div class="recipes-content-up">
								<h5>{{ recipe.title }}</h5>
								<div class="recipes-icons">
									<i class='bx bxs-heart'></i>
									<i class='bx bxs-share-alt'></i>
								</div>
							</div>

							{% if recipe.image %}
								<div class="recipes-card-img">
									<img class="crop-horizontal" src="/uploads/{{ recipe.image }}">
								</div>
							{% endif %}

							<div id="recipe-details">
								<p class="recipes-card-description">{{ recipe.description }}</p>
								<div class="level-budget">
									<p>
										<i class='bx bx-globe'></i>:
										{{ recipe.cuisine }}</p>
									<p>
										<i class='bx bxs-bowl-rice'></i>:
										{{ recipe.level }}</p>
									<p>
										<i class='bx bx-euro'></i>:
										{{ recipe.budget }}</p>
								</div>
							</div>

							<button class="btn-getCooking">Get Cooking!</button>
						</a>
					</div>
				{% else %}
					<p>No records found</p>
				{% endfor %}
			</div>
		</div>
	</section>

	<a href="{{ path('app_recipes_new') }}">Create new</a>
{% endblock %}
